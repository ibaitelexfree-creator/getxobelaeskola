# ============================================================
# .env.example - Copia esto a .env y rellena los valores
# NUNCA subas .env a Git
# ============================================================

# Nombre del proyecto (se usa como prefijo en containers)
PROJECT_NAME=getxobelaeskola

# PostgreSQL
DB_USER=n8n
DB_PASSWORD=CAMBIA_ESTO_password_muy_segura_123
DB_NAME=n8n

# Redis
REDIS_PASSWORD=CAMBIA_ESTO_redis_password_456

# n8n - Genera con: openssl rand -hex 32
N8N_ENCRYPTION_KEY=GENERA_CON_openssl_rand_hex_32
N8N_JWT_SECRET=GENERA_CON_openssl_rand_hex_32

# URLs
N8N_HOST=n8n.tudominio.com
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.tudominio.com/

# Timezone
TIMEZONE=Europe/Madrid

# ---- Backups ----
# S3 / Backblaze B2 / Cloudflare R2
BACKUP_S3_BUCKET=tu-bucket-backups
BACKUP_S3_ENDPOINT=https://s3.eu-central-1.amazonaws.com
BACKUP_S3_ACCESS_KEY=tu_access_key
BACKUP_S3_SECRET_KEY=tu_secret_key
BACKUP_RETENTION_DAYS=30

# ---- Notificaciones de backup ----
BACKUP_WEBHOOK_URL=https://hooks.slack.com/tu_webhook  # Opcional

# ---- Supabase ----
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_SERVICE_KEY=tu_service_key

# ---- Fly.io (para redundancia) ----
FLY_APP_NAME=getxo-n8n
FLY_REGION_PRIMARY=mad   # Madrid
FLY_REGION_SECONDARY=cdg  # Par√≠s
